        <div class="head">
            <div class="head-inner">
                <div class="h-r-left">
                    校卖部
                </div>
                <div class="h-right">
                    <p id="personName" class="h-r-userName"><%= username %></p>
                    <a class="exit fr" href="/signIn">退出登录</a>
                    <p><input type="button" value="发布商品" class="h-r-input" onclick="getOrder()"/>
                        <input type="button" value="我的关注" class="h-r-input order-focus"/>
                    </p>
                </div>
            </div>
        </div>
        <p class="lin"></p>
        <div class="content">
            <div class="c-left">
                <ul class="c-l-ul">
                    <li><a href="/index">首&nbsp;页</a></li>
                    <li><a href="/uploadOrder">发布商品</a></li>
                    <li><a href="/orderOnline">在线商品</a></li>
                    <li><a href="#" class="order-focus">我的关注</a></li>
                    <!--<li id="addClass">添加分类</li>
