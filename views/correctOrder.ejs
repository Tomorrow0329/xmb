                </ul>
            </div>
            <div class="c-right c-r-correct">
                <h1 class="c-r-h1">商品信息表</h1>
                <% searchOrders.forEach(function(order){ %>
                <form id="orderForm" action="/updateOrder" method="post">
                    <p class="c-r-from-p">
                        <input type="text" name="id" id="id" value="<%= order._id%>" class="correct_id">
                        <input type="text" name="personName" id="onName" value="<%= order.personName%>" class="correct_id">
                        商品名称：<input type="text" name="goodsName" id="goodsName" value="<%= order.goodsName %>"  readonly="true" class="only">&nbsp;
                        商品数量：<input type="text" name="num" id="num" value="<%= order.num %>" class="textRight">&nbsp;
                        商品单价：<input type="text" name="price" id="price" value="<%= order.price %>" class="textRight"><br/>
                    </p>
                    <p class="c-r-from-p">
                        联系方式：<input type="text" name="tel" id="tel" value="<%= order.tel %>">&nbsp;
                        Email:&nbsp;<input type="text" name="email" id="email" value="<%= order.email %>"><br>
                    </p>

                    <textarea class="c-r-txt" name="describe"><%= order.describe %></textarea>
                    <p>
                        <span id="warning"><%= errMsg%></span>
                        <a href="/orderOnline"><input type="button" value="返回" class="btn"></a>
                        <input type="submit" value="确认修改" class="btn">
                    </p>
                </form>
                <% }) %>

            </div>

